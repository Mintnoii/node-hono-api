generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 定义 User 模型
model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique @db.VarChar(255) // 邮箱必须填写，且长度不超过 255 个字符
  name      String? // 用户名可选
  password  String  @db.VarChar(12) // 密码长度必须在 8-12 位之间
  createdAt DateTime @default(now()) // 创建时间
  updatedAt DateTime @updatedAt // 更新时间
}

