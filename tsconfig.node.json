{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "allowJs": true,
     "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
     "allowSyntheticDefaultImports": true,
  },
  "include": ["apps/*/vite.config.ts", "apps/backend/src/**.ts","apps/backend/src/**/*.ts"],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}
